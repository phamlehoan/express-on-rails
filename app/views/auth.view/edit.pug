extends ../layouts/auth/layout

block content
  .row
    .col-lg-6.d-none.d-lg-block
      img.img-fluid(src='/images/img/login.png')
    .col-lg-6
      .p-5
        .text-center
          h1.h4.text-gray-900.mb-4 Change your password
        form.user(action=`/auth/${email}?_method=PUT` method='POST')
          - if(!isFirstTimeCreatePassword)
            - if (user)
              .form-group
                input#password.form-control.form-control-user(type='password' name='oldPassword' placeholder='Current Password')
            - else
              input(type='hidden' name='oldPassword' value=`${token}`)
          .form-group
            input#password.form-control.form-control-user(type='password' name='password' placeholder='New Password')
          .form-group
            input#password-confirmation.form-control.form-control-user(type='password' name='passwordConfirmation' placeholder='Confirm Your Password')
          input.btn.btn-primary.btn-user.btn-block(type='submit' value='Change password')
